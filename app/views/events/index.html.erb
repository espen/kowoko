<ul id="events">
  <% for event in @events %>
    <li>
      <acronym class="published">
      <span class="pub-month"><%= event.starts_at.strftime('%B') %></span>
      <span class="pub-date"><%= event.starts_at.strftime('%d') %></span>
    </acronym>
    <span class="venue">
      <%= link_to event.place, event %> (<%= event.city.name %>) at <%= event.starts_at.strftime('%I:%M%p')%></span><br />
      <% if event.attendees.any? %>
        <% for attendent in event.attendees %>
          <span class="attendees">
    		<%= image_tag "http://api.twitter.com/1/users/profile_image/#{attendent.nickname}.json?size=bigger", { :height => "32"} %>
    	  </span>
        <% end %>
      <% end %>
			<%= link_to "View", event, { :class => "button2" } %> 			
  <% end %>
</ul>