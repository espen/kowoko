<h2>Organize your own co-working session</h2>
<%= form_for @event do |f| %>
<p>
<%= f.label :city %>
<%= f.text_field :city %>
</p>
<p>
<%= f.label :starts_at %>
<%= f.text_field :starts_at, {:value => Time.zone.now.strftime('%d.%m.%Y') } %>
</p>
<p>
<%= f.label :description %>
<%= f.text_area :description %>
</p>
<p>
<span class="inline">
<span class="buttonblock">
<%= f.submit "Create", :class=>"button" %>
</span>
</span>
</p>
<% end %>